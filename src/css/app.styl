// app global css in Stylus form

/* Estilos para telas menores */
@media only all and (max-width: 1024px) {
    .layoutBotoes {
        text-align:center; 
        margin-top:10%;
    }

    .layoutHome {
        min-heigth:100%; 
        max-width:90%;
    }

    .layoutPaginaSobre {
        min-height:100%;
        max-width:95%;
        margin-left:2%;
    }
    
    #imagemSorvete {
        width:99%;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top:5%;
        margin-bottom:5%;
    }

    #logoSorvete {
        margin-left:-2.5%;
        width:15%;
    }

    #botaoSobre {
        margin-right: -2%;
        width:10%;
    }

    #botaoPredizerLucro {
        margin-right:4%;
    }
    
    #listaSobre {
        margin-top:5%;
    }

    #tituloGeral {
        text-align:center;
    }
}

/* Estilo para telas maiores */

@media only all and (min-width: 1025px) {
    .layoutBotoes {
        text-align:center; 
        margin-top:7%;
    }

    .layoutHome {
        min-heigth:100%; 
        max-width:95%;
    }

    .layoutPaginaSobre {
        min-height:100%;
        max-width:98%;
        margin-left:1%;
    }
    
    #imagemSorvete {
        width:30%;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top:3%;
        margin-bottom:3%;
    }

    #logoSorvete {
        margin-left:-1%;
        width:5%;
    }

    #botaoSobre {
        margin-right: -5%;
        width:10%;
    }

    #botaoPredizerLucro {
        margin-right:4%;
    }
    
    #listaSobre {
        margin-top:2%;
    }

    #tituloGeral {
        text-align:center;
    }
}





